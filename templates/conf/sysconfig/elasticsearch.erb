ES_USER=<%= @user %>
<% if @conf_path_logs -%>
LOG_DIR=<%= @conf_path_logs %>
<% else -%>
LOG_DIR=/var/log/elasticsearch
<% end -%>
<% if @conf_path_data -%>
DATA_DIR=<%= @conf_path_data %>
<% else -%>
#DATA_DIR=/var/lib/elasticsearch
<% end -%>
<% if @conf_path_work -%>
WORK_DIR=<%= @conf_path_work %>
<% else -%>
#WORK_DIR=/tmp/elasticsearch
<% end -%>
<% if @conf_path_conf -%>
CONF_DIR=<%= @conf_path_conf %>
CONF_FILE=<%= @conf_path_conf %>/elasticsearch.yml
<% else -%>
#CONF_DIR=/etc/elasticsearch
#CONF_FILE=/etc/elasticsearch/elasticsearch.yml
<% end -%>

# Directory where the ElasticSearch binary distribution resides
ES_HOME=/usr/share/elasticsearch

# Heap Size (defaults to 256m min, 1g max)
<% if@es_max_mem -%>
ES_HEAP_SIZE=<%= @es_max_mem %>
<% else -%>
#ES_HEAP_SIZE=1g
<% end -%>

# Heap new generation
#ES_HEAP_NEWSIZE=

# max direct memory
#ES_DIRECT_SIZE=

# Additional Java OPTS
#ES_JAVA_OPTS=

# Maximum number of open files
MAX_OPEN_FILES=65535

# Maximum amount of locked memory
#MAX_LOCKED_MEMORY=
